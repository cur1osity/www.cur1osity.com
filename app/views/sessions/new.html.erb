<div id="log_in_2">
<h2>Log in</h2>

<div class="row">
 <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Enter your email", required: true, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(Forgot password?)", new_password_reset_path %>
      <%= f.password_field :password, placeholder: "Enter your password", required: true, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline remember" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
</div>