<% provide(:title, 'Sign up') %>

<div id="log_in_2">

<h2>Sign up</h2>
<br>
<div class="row">
 <div class="col-md-4 col-md-offset-4">
    <%= form_for(@user, url: signup_path) do |f| %>
       <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Enter your name", class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Enter your email", class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Min. 6 characters...", class: 'form-control' %>

      <%= f.label :password_confirmation, "Password confirmation" %>
      <%= f.password_field :password_confirmation, placeholder: "Re-enter your password", class: 'form-control' %>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
     
     <div id ="captcha">

<%=  recaptcha_tags %>

</div>

    <% end %>
  </div>
</div>
</div>
