<% if @user.nil? %>

<%= link_to avatar_for_profile(current_user), current_user %>
<br>

<h1 id ="user_infoX"><%= current_user.name %></h1>

<span id ="view_my_profile"><%= link_to "view my profile", current_user %></span> 
<span><%= pluralize(current_user.microposts.count, "micropost") %></span>

<% else %>

<%= link_to avatar_for_profile(@user), @user %>
<br>

<h1 id ="user_infoX"><%= @user.name %></h1>

<span id ="view_my_profile"><%= link_to "view my profile", @user %></span> 
<span><%= pluralize(@user.microposts.count, "micropost") %></span>

<% end %>