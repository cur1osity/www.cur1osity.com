<!DOCTYPE html>
<html>
  <head>
  <meta name="viewport" content="width=device-width, initial-scale=0.45">
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>
    <%= render 'layouts/shim' %>

 
  </head>
   <body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="150">

 <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
         <% end %>

 
 <% if logged_in? %>

  <%= render 'layouts/header' %>
 
  <div class="container">

  <%= yield %>

  </div>

 <% else %> 

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
     <div class="navbar-header">
     <canvas id="canvas" width="80" height="40" style="cursor: pointer;" onclick="window.location='/';"></canvas>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right navbar-custom">


  <script>
     var canvas = document.getElementById("canvas"); 
     var ctx = canvas.getContext("2d");
     ctx.font = "100 40px Ruge Boogie"; 
     ctx.fillStyle = 'black';
     ctx.fillText("</   >", 0, 40);
     ctx.font = "100 46px Ruge Boogie";
     ctx.fillStyle = 'red';
     ctx.fillText("?", 37, 40);
  </script>

      <% if current_page?(root_path) %>
  
        <li><%= link_to "Home", '#home' %></li>
        <li><%= link_to "About",   '#about' %></li>
        <li><%= link_to "Log in", '#log_in' %></li>
        <li><%= link_to "Contact", '#contact' %></li>
        <li><%= link_to "Sign up", signup_path %></li>
      
      <% elsif current_page?(login_path) %>

        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Sign up", signup_path %></li>

      <% elsif current_page?(signup_path) %>

        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Log in", login_path %></li>

      <% else %>

        <li><%= link_to "Home", root_path %></li>
       
      <% end %>

      </ul>
    </div>
  </div>
</nav>

  <%= yield %>

 <% end %>

    </div>

  </body>
</html>


